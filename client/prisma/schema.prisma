generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String              @id @default(uuid())
  email     String?             @unique
  name      String?
  chats     Chat[]
  messages  Message[]
  contracts GeneratedContract[] @relation("GeneratedContracts")
  deployments DeployedContract[] @relation("DeployedContracts")
}

model Chat {
  id       String    @id @default(uuid())
  title    String?
  metadata Json?
  userId   String?
  User     User?     @relation(fields: [userId], references: [id])
  Message  Message[]
}

model Message {
  id       String  @id @default(uuid())
  content  Json[]
  metadata Json?
  replyTo  String?
  chatId   String
  userId   String
  Chat     Chat    @relation(fields: [chatId], references: [id])
  User     User    @relation(fields: [userId], references: [id])
}

model GeneratedContract {
  id           String   @id @default(uuid())
  name         String
  contractCode Json
  metadata     Json?
  createdAt    DateTime @default(now())
  userId       String
  User         User     @relation("GeneratedContracts", fields: [userId], references: [id])
  DeployedContracts DeployedContract[]
}

model DeployedContract {
  id           String   @id @default(uuid())
  name         String
  deployedAt   DateTime @default(now())
  address      String   @unique 
  metadata     Json?
  userId       String
  User         User     @relation("DeployedContracts", fields: [userId], references: [id])
  generatedId  String?  
  GeneratedContract GeneratedContract? @relation(fields: [generatedId], references: [id])
}

enum Role {
  USER
  ASSISTANT
}